<UserControl x:Class="SampleApp.Components.Data.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleApp.Components.Data"
             xmlns:ui="clr-namespace:WPFUtilities.Components.UI;assembly=WPFUtilities"
             xmlns:service="clr-namespace:WPFUtilities.Components.Services.Properties;assembly=WPFUtilities"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:DataViewModel}"
             d:DesignHeight="111.218" 
             d:DesignWidth="295.988">
    <Grid>
        <DataGrid 
            service:DataContext.Resolve="{x:Type local:IDataViewModel}"
            ui:DataGrid.AdjustColumnSizeMode="OnResize"
            ItemsSource="{Binding Items}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="50*"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="50*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
