<Window x:Class="SampleApp.Components.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:commands="clr-namespace:SampleApp.Commands"
        xmlns:wui="clr-namespace:WPFUtilities.Components.UI;assembly=WPFUtilities"
        xmlns:ui="clr-namespace:WPFUtilities.Components.UI;assembly=WPFUtilities"
        xmlns:service="clr-namespace:WPFUtilities.Components.Services.Properties;assembly=WPFUtilities"
        xmlns:uicomponents="clr-namespace:SampleApp.Components.UI"
        xmlns:logging="clr-namespace:SampleApp.Components.Logging"
        xmlns:settings="clr-namespace:SampleApp.Components.Settings"
        d:DataContext="{d:DesignInstance Type=uicomponents:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title,FallbackValue=title}" 
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        Height="600" 
        Width="1162"        
        service:DataContext.IsAuto="True"
        ui:Window.OnDisplayCommand="{x:Type commands:OnMainWindowShownCommand}"
        >

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <uicomponents:MainMenu/>

        <uicomponents:ButtonBar Grid.Row="1"/>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- tab panel -->
            <TabControl Grid.Column="1" Grid.Row="2" Margin="8,0,8,8">

                <TabItem Header="Settings" IsSelected="True">
                    <settings:SettingsView service:Component.Type="{x:Type settings:SettingsComponent}" 
                                           service:DataContext.IsAuto="True"/>
                </TabItem>

                <TabItem Header="Model validation">
                </TabItem>

                <TabItem Header="Scroll viewer">
                </TabItem>

                <TabItem Header="Layout">
                </TabItem>

                <TabItem Header="Converters">
                </TabItem>

                <TabItem Header="Brushes">
                </TabItem>

            </TabControl>

            <!-- logs panels -->
            <Grid Grid.Row="3">

                <Grid.RowDefinitions>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>

                <logging:LogView
                    Margin="8,0,8,8"
                    Title="application log"
                    service:Component.Type="{x:Type logging:ApplicationLogComponent}"
                    service:DataContext.IsAuto="True"
                />

                <logging:LogView
                    Margin="8,0,8,8"
                    Grid.Row="1"
                    Title="window log"
                    service:Component.Type="{x:Type logging:WindowLogComponent}"
                    service:DataContext.IsAuto="True"
                />

            </Grid>

        </Grid>

    </Grid>
</Window>
