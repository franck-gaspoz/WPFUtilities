<Window x:Class="SampleApp.Components.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:commands="clr-namespace:SampleApp.Commands"
        xmlns:wpfubehaviorsWindows="clr-namespace:WPFUtilities.Behaviors.Windows;assembly=WPFUtilities"
        xmlns:service="clr-namespace:WPFUtilities.Behaviors.Services;assembly=WPFUtilities"
        xmlns:component="clr-namespace:WPFUtilities.Components.Component;assembly=WPFUtilities"
        xmlns:componentsUI="clr-namespace:SampleApp.Components.UI"
        xmlns:local="clr-namespace:SampleApp" 
        xmlns:appl="clr-namespace:WPFUtilities.Components.Application;assembly=WPFUtilities" 
        xmlns:logging="clr-namespace:SampleApp.Components.Logging"
        d:DataContext="{d:DesignInstance Type=componentsUI:MainWindowViewModel}"
        service:DataContextBehavior.IsAuto="True"
        mc:Ignorable="d"
        Title="{Binding Title,FallbackValue=title}" 
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        Height="600" Width="800"        
        >
    <!-- 
    
    wpfubehaviorsServices:ServiceDependencyDataContextBehavior.Resolve="{x:Type componentsUI:IMainWindowViewModel}" 
    -->
    
    <Behaviors:Interaction.Behaviors>
        <wpfubehaviorsWindows:WindowDisplayedDelegateCommandBehavior Command="{x:Static commands:Commands.OnMainWindowShown}"/>
    </Behaviors:Interaction.Behaviors>
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <componentsUI:MainMenu/>

        <componentsUI:ButtonBar Grid.Row="1"/>

        <TabControl Grid.Row="2" Margin="8,0,8,8" >

            <TabItem Header="Settings" IsSelected="True">
            </TabItem>
            
            <TabItem Header="Model validation">
            </TabItem>

            <TabItem Header="Scroll viewer">
            </TabItem>

            <TabItem Header="Layout">
            </TabItem>

            <TabItem Header="Converters">
            </TabItem>

            <TabItem Header="Brushes">
            </TabItem>

        </TabControl>

        <Grid Grid.Row="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <logging:LogView
                Margin="8,0,8,8"
                Title="application log"
            />

            <logging:LogView
                Margin="8,0,8,8"
                Grid.Column="1"
                Title="window log"
            />

        </Grid>

        <!--
        wpfubehaviorsServices:ServiceDependencyDataContextBehavior.IsEnabled="True"
        -->

    </Grid>
</Window>
