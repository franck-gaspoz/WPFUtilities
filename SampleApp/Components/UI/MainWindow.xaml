<Window x:Class="SampleApp.Components.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:commands="clr-namespace:SampleApp.Commands"
        xmlns:wpfubehaviorsWindows="clr-namespace:WPFUtilities.Behaviors.Windows;assembly=WPFUtilities"
        xmlns:wpfubehaviorsServices="clr-namespace:WPFUtilities.Behaviors.Services;assembly=WPFUtilities"
        xmlns:wpfucommandsAppl="clr-namespace:WPFUtilities.Commands.Appl;assembly=WPFUtilities"
        xmlns:componentsUI="clr-namespace:SampleApp.Components.UI"
        xmlns:local="clr-namespace:SampleApp" 
        xmlns:appl="clr-namespace:WPFUtilities.Components.Appl;assembly=WPFUtilities" 
        xmlns:logging="clr-namespace:SampleApp.Components.Logging"
        d:DataContext="{d:DesignInstance Type=appl:AppViewModelBase}"
        mc:Ignorable="d"
        Title="WPFUtilities sample application" 
        WindowStartupLocation="CenterScreen"
        wpfubehaviorsServices:ServiceDependencyDataContextBehavior.Resolve="{x:Type componentsUI:IMainWindowViewModel}"
Height="350" Width="600">
    
    <Behaviors:Interaction.Behaviors>
        <wpfubehaviorsWindows:WindowDisplayedDelegateCommandBehavior Command="{x:Static commands:Commands.OnMainWindowShown}"/>
    </Behaviors:Interaction.Behaviors>
    
    <Grid Margin="0">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Menu Padding="4">
            <MenuItem Header="Application">
                <MenuItem Header="Log a message"
                          Command="{x:Static wpfucommandsAppl:ApplCommands.Log}"
                          CommandParameter="I am a log message!"/>
                <Separator/>
                <MenuItem Header="Exit" Command="{x:Static wpfucommandsAppl:ApplCommands.ApplicationClose}"/>
            </MenuItem>
        </Menu>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="8">
            <Button Content="Log a message" 
                    Command="{x:Static wpfucommandsAppl:ApplCommands.Log}"
                    CommandParameter="I am a log message!"/>
        </StackPanel>

        <logging:LogView 
            Grid.Row="3" 
            wpfubehaviorsServices:ServiceDependencyDataContextBehavior.IsEnabled="True"/>

    </Grid>
</Window>
