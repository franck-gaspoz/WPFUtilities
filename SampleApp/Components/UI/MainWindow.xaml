<Window x:Class="SampleApp.Components.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:commands="clr-namespace:SampleApp.Commands"
        xmlns:wpfubehaviors="clr-namespace:WPFUtilities.Behaviors.Windows;assembly=WPFUtilities"
        xmlns:wpfucommandsAppl="clr-namespace:WPFUtilities.Commands.Appl;assembly=WPFUtilities"
        xmlns:local="clr-namespace:SampleApp" 
        xmlns:appl="clr-namespace:WPFUtilities.Components.Appl;assembly=WPFUtilities" 
        d:DataContext="{d:DesignInstance Type=appl:AppViewModelBase}"
        mc:Ignorable="d"
        Title="WPFUtilities sample application" 
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800">
    <Behaviors:Interaction.Behaviors>
        <wpfubehaviors:WindowDisplayedDelegateCommandBehavior Command="{x:Static commands:Commands.OnMainWindowShown}"/>
    </Behaviors:Interaction.Behaviors>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Log a message" 
                    Command="{x:Static wpfucommandsAppl:ApplCommands.Log}"
                    CommandParameter="I am a log message!"/>
        </StackPanel>
    </Grid>
</Window>
