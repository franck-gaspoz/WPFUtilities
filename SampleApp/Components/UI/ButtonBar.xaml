<UserControl x:Class="SampleApp.Components.UI.ButtonBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleApp.Components.UI"
             xmlns:wpfucommandsAppl="clr-namespace:WPFUtilities.Commands.Appl;assembly=WPFUtilities"
             mc:Ignorable="d" 
             d:DesignHeight="48" 
             d:DesignWidth="800">
    
    <Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="8">
            <Button Content="Log a message" 
                    Command="{x:Static wpfucommandsAppl:ApplCommands.Log}"
                    CommandParameter="I am a log message!"/>
        </StackPanel>
    </Grid>
    
</UserControl>
